{
  "version": 1, 
  "disable_existing_loggers": false, 
  "loggers": {
      "rgb-logger": {
  	"level": "INFO", 
  	"handlers": [
  		"stdout", 
  		"file" 
  	],
  	"propagate": false 
      }
  }, 
  "handlers": {
    "stdout": {
  	  "class": "logging.StreamHandler", 
  	  "formatter": "simple", 
  	  "stream": "ext://sys.stdout", 
  	  "level": "INFO"
    }, 
    "file": {
      "class": "logging.FileHandler", 
      "level": "INFO", 
      "formatter": "advanced", 
      "filename": "cimr.log", 
      "mode": "w"
    }
  },  
  "formatters": { 
    "simple": { 
       "format": "[%(name)s - %(levelname)s | %(module)s - L%(lineno)d]: %(message)s" 
    }, 
    "advanced": {
        "format": "[%(levelname)s][%(name)s][%(module)s][%(funcName)s][L%(lineno)d][%(asctime)s]: %(message)s", 
        "datefmt" : "%Y-%m-%dT%H:%M:%S%z"
    }, 
    "balanced": { 
        "format": "[%(asctime)s][%(levelname)s|%(name)s][%(module)s|%(funcName)s|L%(lineno)d]: %(message)s",  
        "datefmt" : "%Y-%m-%dT%H:%M:%S"
    } 
  }
}

