<?xml version='1.0' encoding='utf-8'?>
<config>
  <InputData>
    <type>CIMR</type>
    <path>
      $HOME/.local/cimr_rgb/dpr/L1B/CIMR/SCEPS_l1b_sceps_geo_central_america_scene_1_unfiltered_tot_minimal_nom_nedt_apc_tot_v2p1.nc
    </path>
    <antenna_patterns_path>$HOME/.local/cimr_rgb/dpr/antenna_patterns</antenna_patterns_path>
    <split_fore_aft>True</split_fore_aft>
    <source_band>C</source_band>
    <target_band>L X</target_band>
    <LMT>2200</LMT>
    <quality_control>True</quality_control>
  </InputData>
  <GridParams>
    <grid_type>L1R</grid_type>
    <grid_definition></grid_definition> 
    <projection_definition></projection_definition>
    <reduced_grid_inds></reduced_grid_inds>
    # 800 900 3200 3260 south 1450 1460 1780 1800 north 650 660 1250 1260 </GridParams>
  <ReGridderParams>
    <regridding_algorithm>IDS</regridding_algorithm>
    <search_radius>18</search_radius>
    <max_neighbours>20</max_neighbours>
    <variables_to_regrid></variables_to_regrid>
    <source_antenna_method>gaussian</source_antenna_method>
    <target_antenna_method>real</target_antenna_method>
    <polarisation_method>scalar</polarisation_method>
    <source_antenna_threshold>0.5</source_antenna_threshold>
    <target_antenna_threshold>0.5</target_antenna_threshold>
    <max_theta_antenna_patterns>40.</max_theta_antenna_patterns>
    <MRF_grid_definition>EASE2_G3km</MRF_grid_definition>
    <MRF_projection_definition>G</MRF_projection_definition>
    <source_gaussian_params>100000 100000</source_gaussian_params>
    <target_gaussian_params>100000 100000</target_gaussian_params>
    <boresight_shift>True</boresight_shift>
    <rsir_iteration>15</rsir_iteration>
    <bg_smoothing>1</bg_smoothing>
  </ReGridderParams>
  <OutputData>
    <save_to_disk>True</save_to_disk>
    <output_path>
      ./output
    </output_path>
    <version>1.0.0</version>
    <creator_name>Maksym Brilenkov</creator_name>
    <creator_email>brilenkov@stcorp.no</creator_email> <!-- email is not an optional parameter -->
    <creator_url>https://www.stcorp.no/</creator_url>
    <creator_institution>Science and Technology AS</creator_institution>
    <timestamp></timestamp>
    <timestamp_fmt>%Y-%m-%d_%H-%M-%S</timestamp_fmt>
  </OutputData>
  <LoggingParams>
    <logger_name>rgb-logger</logger_name>
    <config_path></config_path>
    <decorate>True</decorate>
  </LoggingParams>
</config>
